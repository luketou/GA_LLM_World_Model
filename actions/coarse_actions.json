    },
    "transformation_rules": {
      "scaffold_swap": {
        "description": "Rules for scaffold replacement while preserving substituents",
        "methodology": "LLM-driven pattern matching with SMILES template substitution",
        "preserve_substituents": true,
        "max_scaffold_size": 20,
        "allowed_atom_types": ["C", "N", "O", "S", "P"]
      },
      "add_functional_group": {
        "description": "Rules for adding functional groups to existing molecules",
        "methodology": "Random position selection with chemical validity checking",
        "position_strategy": "random",
        "avoid_overcrowding": true,
        "max_additions": 3
      },
      "heteroatom_exchange": {
        "description": "Rules for replacing heteroatoms while maintaining structure",
        "methodology": "Direct atom substitution with valence consideration",
        "preserve_aromaticity": true,
        "check_valence": true
      }
    }
  }