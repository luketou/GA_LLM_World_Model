      "functional_groups": {
        "description": "Functional group additions",
        "priority_weight": 1.0,
        "actions": [
          {
            "type": "add_functional_group",
            "name": "add_hydroxyl",
            "description": "在分子上添加羥基 (-OH)",
            "params": {
              "group": "OH",
              "group_smiles": "O",
              "position": "random",
              "example_transformations": [
                {
                  "before": "CC",
                  "after": "CCO",
                  "note": "hydroxyl added to ethane"
                },
                {
                  "before": "c1ccccc1",
