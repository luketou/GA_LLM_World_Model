      "structural_modifications": {
        "description": "Structural modifications and adjustments",
        "priority_weight": 1.2,
        "actions": [
          {
            "type": "heteroatom_exchange",
            "name": "oxygen_to_nitrogen",
            "description": "將氧原子替換為氮原子",
            "params": {
              "from_atom": "O",
              "to_atom": "N",
              "preserve_bonds": true,
              "example_transformations": [
                {
                  "before": "CCO",
                  "after": "CCN",
                  "note": "oxygen to nitrogen exchange"
                },
                {
                  "before": "c1ccoc1",
                  "after": "c1cc[nH]c1",
                  "note": "furan to pyrrole"
                }
              ]
            }
          },
          {
            "type": "heteroatom_exchange",
            "name": "nitrogen_to_oxygen",
            "description": "將氮原子替換為氧原子",
            "params": {
              "from_atom": "N",
              "to_atom": "O",
              "preserve_bonds": true,
              "example_transformations": [
                {
                  "before": "CCN",
                  "after": "CCO",
                  "note": "nitrogen to oxygen exchange"
                },
                {
                  "before": "c1ccncc1",
                  "after": "c1ccoc1",
                  "note": "pyridine to furan analog"
                }
              ]
            }
          },
          {
            "type": "cyclization",
            "name": "form_six_ring",
            "description": "形成六元環結構",
            "params": {
              "ring_size": 6,
              "ring_type": "saturated",
              "example_transformations": [
                {
                  "before": "CCCCCC",
                  "after": "C1CCCCC1",
                  "note": "linear to cyclohexane"
                }
              ]
            }
          },
          {
            "type": "ring_opening",
            "name": "open_small_ring",
            "description": "開環小環結構（3-4元環）",
            "params": {
              "target_ring_sizes": [3, 4],
              "preserve_functionality": true,
              "example_transformations": [
                {
                  "before": "C1CC1",
                  "after": "CCC",
                  "note": "cyclopropane ring opening"
                }
              ]
            }
          }
        ]
